<%# スポットリスト %>
<section class="row-section">
  <div class="container">
    <h2 class="text-center"><span>Spot List</span></h2>
    <div class="text-right">
      <%= search_form_for @q do |f| %>
        <i class="fas fa-search"></i>
        <%= f.search_field :spot_name_cont, placeholder: "キーワードを入力" %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
    <br class="my-5">
    <%= render "prefecture" %>
    <br class="my-5">
    <div class="card">
      <%= render "spot" %>
    </div>
  </div>
</section>
<br>
<p class="text-center"><%= link_to "Go new plan !!", new_plan_path, class: "btn btn-warning btn-lg rounded-pill" %></p>
<p><%= paginate @spots %></p>



