<%# スポットリストの部分テンプレート %>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @spots.each do |spot| %>
    <div class="col">
      <div class="card h-100">
        <%= image_tag spot.photo, class: "card-img-top"%>
        <div class="card-body">
        <h5 class="card-title text-center font-weight-bold"><%= spot.spot_name %></h5>
        <p class="text-right"><%= link_to spot.prefecture.prefecture_name %></p>
        <p class="card-text"><%= spot.content %></p>
        </div>
        <div class="card-footer">
        <%= link_to "詳細", spot, class: 'form-control btn btn-primary btn-block' %>
        <br class="my-7">
        <%= link_to '登録',"#", class: 'form-control btn btn-warning text-white btn-block' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p><%= link_to "プラン作成へ", new_plan_path %></p>
<p><%= link_to "マイページへ", user_path(current_user.id) %></p>
<p><%= link_to "トップページ", root_path %></p>