<div class="container w-50">
  <div class="row">
    <h1 class="text-center text-warning font-weight-bold">スポット詳細</h1>
    <div class="card mb-3">
    <%= image_tag @spot.photo, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title text-center font-weight-bold"><%= @spot.spot_name %></h5>
        <p><%= @spot.content %></p>
        <%# いいねの pタグ に id 属性を追加 %>
        <p id="spot-<%= @spot.id %>">
          <% if @spot.liked_by?(current_user) %>
            <%= render "like", post: @spot %>
          <% else %>
            <%= render "dislike", post: @spot %>
          <% end %>
        </p>
        <p class="text-right">【作成日時】 <%= l @spot.created_at %></p>

        <div class="card-footer">
          <%= link_to '登録',"#", class: 'form-control btn btn-warning text-white btn-block' %>
          <br class="my-7">
          <p><%= link_to "スポット一覧へ", spots_path, class: 'form-control btn btn-primary btn-block' %></p>
        </div>
        <br class="my-7">
      </div>
    </div>
<%# コメント %>
    <div class="card mb-3 w-100">
      <div>
        <div class="comment-create">
          <h3 class="text-left title">コメント</h3>
        </div>
        <div id="comments_area">
          <%= render partial: "comments/comment", local: { comments: @comments } %>
        </div>
      </div>
      <hr>
      <div class="comment-create">
        <% if user_signed_in? %>
          <%= render partial: "comments/form", loacl: { comments: @comments, spot: @spot } %>
        <% end %>
      </div>
    </div>
  </div>
</div>


