<%# 新規ユーザー登録画面 %>
<div class="sidenav">
  <div class="login-main-text">
    <h2><%= t('.sign_up') %></h2>
    <h6>新規登録してアクセスしてください！</h6>
  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <i class="fas fa-envelope"></i> <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
          </div>

          <div class="form-group">
            <i class="fas fa-lock"></i> <%= f.label :password %>
              <% if @minimum_password_length %>
                <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br />
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true, minlength: @minimum_password_length, maxlength: '30',  placeholder: "Password"  %>
          </div>

          <div class="from-group">
            <i class="fas fa-lock"></i> <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Password"  %>
          </div>

          <br class="my-5">
          <%= link_to "ログイン", new_session_path(resource_name), class: 'btn btn-primary'%>
          <%= f.submit t('.sign_up'), class: 'btn btn-warning text-white' %>
        <% end %>
    </div>
  </div>
</div>
