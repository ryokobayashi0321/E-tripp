<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
    <%= link_to "編集", edit_user_registration_path, class: 'btn btn-primary' %>
<% else %>
  <h1>ユーザーページ</h1>
<% end %>

<h3>ユーザー名</h3>
<%= @user.user_name %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>プロフィール</h3>
<% if @user.avatar? %>
  <p><%= image_tag @user.avatar.url %></p>
<% end %>