<%# ユーザー一覧 %>
<section class="row-section">
  <div class="container">
    <div class="row">
      <h2 class="text-center"><span>User List</span></h2>
    </div>
    <% @users.each do |user| %>
      <div class="col-md-10 offset-md-1 row-block">
        <ul id="sortable">
          <li>
            <div class="media border-primary">
              <div class="media-left align-self-center">
                <div class="img img-rounded img-fluid">
                  <% if user.avatar? %>
                    <%= image_tag user.avatar.url, size: "50x50", class: "rounded-circle" %>
                  <% else %>
                    <%= image_tag src="/assets/default.png", size: "50x50", class: "rounded-circle" %>
                  <% end %>
                </div>
              </div>
              <div class="media-body">
                <h4 class="text-primary"><i class="fas fa-user fa-lg"></i>
                  <% if user.email == "guest@example.com" %>
                    <span>ゲストユーザー</span>
                  <% else %>
                    <span><%= user.user_name %></span>
                  <% end %>
                </h4>
                <h4><i class="fas fa-envelope fa-lg"></i> <span><%= user.email %></span></h4>
              </div>
              <div class="media-right align-self-center">
                <% if user_signed_in? && user == current_user %>
                  <%= link_to user_path(current_user.id), method: :get do %>
                    <i class="fas fa-user-circle fa-2x"></i>
                  <% end %>
                <% else %>
                  <%= link_to user_path(user.id), method: :get do %>
                    <i class="fas fa-user-circle fa-2x"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</section>
<p class="text-center">
  <%= link_to "Go new plan !!", new_plan_path, class: "rounded-pill btn btn-warning btn-lg", role: "button", ariapressed: "true" %>
</p>

