<%# ユーザー一覧 %>
<section class="row-section">
  <div class="container">
    <div class="row">
      <h2 class="text-center"><span>User List</span></h2>
    </div>
    <% @users.each do |user| %>
      <div class="col-md-10 offset-md-1 row-block">
        <ul id="sortable">
          <li>
            <div class="media">
              <div class="media-left align-self-center">
                <div class="img img-rounded img-fluid">
                  <% if user.avatar? %>
                    <%= image_tag user.avatar.url %>
                  <% else %>
                    <%= image_tag src="/assets/default.png" %>
                  <% end %>
                </div>
              </div>
              <div class="media-body">
                <h4><i class="fas fa-user fa-lg"></i>
                  <% if user.email == "guest@example.com" %>
                    <span>ゲストユーザー</span>
                  <% else %>
                    <span><%= user.user_name %></span>
                  <% end %>
                </h4>
                <h4><i class="fas fa-envelope fa-lg"></i> <span><%= user.email %></span></h4>
              </div>
              <div class="media-right align-self-center">
                <% if user_signed_in? && user == current_user %>
                  <%= link_to "マイページ", user_path(current_user.id), class: "btn btn-primary"%>
                <% else %>
                  <%= link_to "ユーザーページ", user_path(user.id), class: "btn btn-primary"%>
                <% end %>
              </div>
            </div>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</section>
<p><%= link_to "プラン作成へ", new_plan_path %></p>