<%# コメント内容(２件) %>
  <h5 class="text-left"><i class="fas fa-comments"></i> <%= "#{ @comments_count }件のコメント" %></h5>
<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
  <div class="card mx-auto w-100 rounded-lg border-primary mb-3 shadow mb-3 bg-white rounded">
        <div class="card-body">
        <div class="card-title">
          <% if comment.user.avatar? %>
            <%= image_tag comment.user.avatar.url, size: "40x40", class: "rounded-circle" %>
          <% else %>
            <%= image_tag src="/assets/default.png", size: "40x40", class: "rounded-circle" %>
          <% end %>
          <span class="link_line"><%= link_to "#{comment.user.user_name}さん", user_path(comment.user.id) %></span>
          <h6>
          <span><%= l comment.created_at %></span>
          <% if comment.user == current_user %>
            <%= link_to spot_comments_path(comment.spot_id, comment.id), method: :delete, data: { confirm: '削除しますか?', remote: true }  do %>
              <i class="fas fa-trash" style="color: red;"></i>
            <% end %>
          <% end %>
          </h6>
        </div>
        <div class="card-text">
          <p><%= comment.comment %></p>
        </div>
        </div>
        </div>
  <% end %>
<% end %>



